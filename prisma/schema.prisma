generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  createdAt   DateTime @default(now())
}

model Session {
  id       Int     @id @default(autoincrement())
  token    String?  @unique
  isActive Boolean? @default(true)
}
